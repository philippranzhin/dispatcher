<UserControl
    x:Class="DispatcherDesktop.Views.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DispatcherDesktop.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="http://prismlibrary.com/"
    xmlns:properties="clr-namespace:DispatcherDesktop.Properties"
    xmlns:validationRules="clr-namespace:DispatcherDesktop.Infrastructure.ValidationRules"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="200" />
                <ColumnDefinition Width="*" MinWidth="200" />
                <ColumnDefinition Width="*" MinWidth="200" />
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0" Background="{DynamicResource MaterialDesignDivider}">
                <materialDesign:ColorZone DockPanel.Dock="Top">
                    <TextBlock
                        Padding="10"
                        Style="{DynamicResource MaterialDesignBody2TextBlock}"
                        Text="соединение"
                        TextAlignment="Center" />
                </materialDesign:ColorZone>
                <Button
                    Margin="20"
                    Command="{Binding SaveConnectionSettingsCommand}"
                    Content="{x:Static properties:Resources.ApplyBtnText}"
                    DockPanel.Dock="Bottom"
                    Style="{DynamicResource MaterialDesignRaisedLightButton}" />
                <DockPanel
                    Margin="15"
                    DockPanel.Dock="Top"
                    LastChildFill="False">
                    <CheckBox
                        Content="{x:Static properties:Resources.SurveyStartedLabel}"
                        DockPanel.Dock="Top"
                        IsChecked="{Binding SurveyEnabled}" />
                    <TextBox
                        x:Name="NameTextBox"
                        Padding="0,15,0,0"
                        materialDesign:HintAssist.Hint="имя порта"
                        DockPanel.Dock="Top"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                        <TextBox.Text>
                            <Binding
                                Mode="TwoWay"
                                Path="PortName"
                                UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <validationRules:NotEmptyRule ValidatesOnTargetUpdated="True" />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <TextBox
                        Padding="0,15,0,0"
                        materialDesign:HintAssist.Hint="период опроса (сек)"
                        DockPanel.Dock="Top"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                        <TextBox.Text>
                            <Binding
                                Mode="TwoWay"
                                Path="SurveyPeriod"
                                UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <validationRules:NotEmptyRule ValidatesOnTargetUpdated="True" />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </DockPanel>

            </DockPanel>
            <GridSplitter
                Grid.Column="0"
                Width="3"
                VerticalAlignment="Stretch"
                ShowsPreview="False" />
            <DockPanel Grid.Column="1">
                <materialDesign:ColorZone DockPanel.Dock="Top">
                    <TextBlock
                        Padding="10"
                        Style="{DynamicResource MaterialDesignBody2TextBlock}"
                        Text="устройства"
                        TextAlignment="Center" />
                </materialDesign:ColorZone>
                <ListBox />
            </DockPanel>
            <GridSplitter
                Grid.Column="1"
                Width="3"
                VerticalAlignment="Stretch"
                ShowsPreview="False" />
            <DockPanel Grid.Column="2" Background="{DynamicResource MaterialDesignDivider}">
                <materialDesign:ColorZone DockPanel.Dock="Top">
                    <TextBlock
                        Padding="10"
                        Style="{DynamicResource MaterialDesignBody2TextBlock}"
                        Text="данные"
                        TextAlignment="Center" />
                </materialDesign:ColorZone>
                <ListBox />
            </DockPanel>
            <GridSplitter
                Grid.Column="2"
                Width="3"
                VerticalAlignment="Stretch"
                ShowsPreview="False" />
        </Grid>
    </DockPanel>
</UserControl>
