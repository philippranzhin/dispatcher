<UserControl x:Class="DispatcherDesktop.Views.DeviceDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DispatcherDesktop.Views"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             d:DesignHeight="150" d:DesignWidth="200">
    <materialDesign:Card VerticalAlignment="Stretch">
        <DockPanel>
            <materialDesign:ColorZone DockPanel.Dock="Top" Padding="10">
                <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}">
                    <Run>Информация об устройстве</Run> 
                    <Run Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" Text="{Binding DeviceData.Name, Mode=OneWay}"/>
                </TextBlock>
            </materialDesign:ColorZone>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <materialDesign:Card Grid.Row="0" Grid.Column="0" Margin="15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <DockPanel>
                        <materialDesign:ColorZone DockPanel.Dock="Top" Padding="10">
                            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}">Адрес в сети</TextBlock>
                        </materialDesign:ColorZone>
                        <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Padding="10" Text="{Binding DeviceData.Address, Mode=OneWay}" Margin="5"/>
                    </DockPanel>
                </materialDesign:Card>
                <materialDesign:Card Grid.Row="0" Grid.Column="1" Margin="15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <DockPanel>
                        <materialDesign:ColorZone DockPanel.Dock="Top" Padding="10">
                            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}">Температура наружного воздуха</TextBlock>
                        </materialDesign:ColorZone>
                        <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Padding="10" Margin="5">
                            <Run Text="{Binding DeviceData.OutdoorTemperature, Mode=OneWay}"/> <Run Text="&#186;"/>
                        </TextBlock>
                    </DockPanel>
                </materialDesign:Card>
            </Grid>
        </DockPanel>
    </materialDesign:Card>
</UserControl>
